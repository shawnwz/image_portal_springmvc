}
.more{
    background: #323232;
    border: 2px #323232 solid;
    color: #fff;
    padding: 10px 0px;
	width:165px;
	margin:auto;
	position:relative;
	margin-top:52px;
}
.more:hover{
    background: white;
    border: 2px #323232 solid;
    color: black;
  -webkit-transition: all 0.3s;
  -moz-transition: all 0.3s;
  -o-transition: all 0.3s;
  transition: all 0.3s;
}
