.dialog_background_wrapper { background-color: #000000; display: none; width: 100%; height: 100%; left: 0; top: 0; /*FF IE7*/filter: alpha(opacity=60); /*IE*/ opacity: 0.6; /*FF*/ z-index: 10000; position: fixed !important; /*FF IE7*/ position: absolute; /*IE6*/ _top: expression(eval(document.compatMode &&document.compatMode=='CSS1Compat') ? documentElement.scrollTop + (document.documentElement.clientHeight-this.offsetHeight)/2 :/*IE6*/document.body.scrollTop + (document.body.clientHeight - this.clientHeight)/2);/* IE5 IE5.5*/}
.dialog_wrapper { position: absolute; display: block; z-index: 20000; background: #fff; border-radius:6px;overflow:hidden;}
.dialog_header { float: left; height: 36px; width: 100%; background: url(../images/tc_tt.gif) repeat-x 0 0; -moz-border-radius: 5px; -khtml-border-radius: 5px; -webkit-border-radius: 5px; border-radius: 5px; line-height: 36px; }
.dialog_content_wrapper { width: 100%; float: left; }
.dialog_footer { width: 100%; float: left; }
.dialog_btn_close { display: block; float: right; height: 19px; width: 19px; margin-top: 8px; margin-right: 8px; }
.dialog_btn_close a { display: block; width: 19px; height: 19px; background: url(../images/images/icon_close.png) no-repeat; text-indent: -9999px; }
.dialog_header_title { display: block; float: left; padding-left: 15px; font-weight: 100; color: #474747; font-size: 14px; }
.dialog_message_wrapper { padding: 10px 20px; }
.dialog_message_align_center { width: 100%; height: 60px; text-align: center; line-height: 60px; }
.dialog_footer_btn_wrapper { width: 100%; }
.dialog_footer_btn_inner_wrapper { display: block; height: 24px; width: auto; margin: 0 auto; text-align: center; } 
.anchor_button_cancel { background: url(../images/zh_btn2.gif) no-repeat 0 0; width: 67px; height: 23px; border: none; cursor: pointer; margin-right: 5px; color:#ffffff; display: inline-block; text-align: center; line-height: 23px; }
.anchor_button_confirm { background: url(../images/zh_btn1.gif) no-repeat 0 0; width: 67px; height: 23px; border: none; cursor: pointer; margin-right: 5px; color:#ffffff; display: inline-block; text-align: center; line-height: 23px; }
.dialog_btns_align_right { text-align: right; margin-right: 20px; }
